{
	"compilerOptions": {
		"module": "esnext",
		"target": "es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"strict": true,
		"noLib": true,
		"typeRoots": [],
		"baseUrl": "./",
		"paths": {
			"@src": [
				"./src/*"
			],
			"@custom_modules": [
				"./custom_modules/*"
			],
			"@types": [
				"./types/*"
			],
		},
	},
	"exclude": [
		"node_modules",
	],
}